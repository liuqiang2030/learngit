package {	import flash.text.TextField;	import flash.text.TextFormat;	import flash.text.TextFieldAutoSize;	import flash.display.Sprite;	public class AlertTest extends Sprite	{		public function AlertTest()		{			var reminder:Alert = Alert.getInstance();			reminder.setMsg("Remember to use addChild()");			var announce:TextField=new TextField();			announce.text=reminder.getMsg();			announce.autoSize=TextFieldAutoSize.LEFT;			var format:TextFormat=new TextFormat();			reminder.colorFont=0x990099;			format.color=reminder.colorFont;			format.font="Arial Black";			announce.setTextFormat(format);			announce.x=200;			announce.y=150;			this.addChild(announce);		}	}}