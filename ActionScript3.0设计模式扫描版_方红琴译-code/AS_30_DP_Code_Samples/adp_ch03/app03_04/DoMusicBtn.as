package {	import flash.events.MouseEvent;	import flash.display.Sprite;	public class DoMusicBtn extends Sprite	{		private var _playOne:SongPlay=new SongPlay();		private var _playTwo:SongPlay=new SongPlay();		private var _stopSong:SongPlay=new SongPlay();		private var playTune:Tuner;		public function DoMusicBtn ()		{			playTune = Tuner.getInstance();			//Set up buttons			addChild (_playOne);			_playOne.x=30;			_playOne.y=50;			addChild (_playTwo);			_playTwo.x=30;			_playTwo.y=150;			addChild (_stopSong);			_stopSong.x=130;			_stopSong.y=100;			//Set up event listeners			_playOne.addEventListener (MouseEvent.CLICK,doOne);			_playTwo.addEventListener (MouseEvent.CLICK,doTwo);			_stopSong.addEventListener (MouseEvent.CLICK,doStop);		}		//Methods		function doOne (e:MouseEvent):void		{			playTune.playMe ("blues.mp3");		}		function doTwo (e:MouseEvent):void		{			playTune.playMe ("class1.mp3");		}		function doStop (e:MouseEvent):void		{			playTune.stopMe ();		}	}}