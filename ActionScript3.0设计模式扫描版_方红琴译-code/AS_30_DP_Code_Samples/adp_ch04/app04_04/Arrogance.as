package{	public class Arrogance extends Decorator	{		var components:Component;		public function Arrogance(components:Component) 		{			this.components=components;		}		override public function getSoul():String		{			return components.getSoul() + "|Arrogance";		}		override public function good():Number		{			return -5 + components.good();		}		override public function evil():Number		{			return 5 + components.evil();		}	}}