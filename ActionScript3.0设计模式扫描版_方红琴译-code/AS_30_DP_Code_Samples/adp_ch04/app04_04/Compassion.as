package{	public class Compassion extends Decorator	{		var components:Component;		public function Compassion(components:Component) 		{			this.components=components;		}		override public function getSoul():String		{			return components.getSoul() + "|Compassion";		}		override public function good():Number		{			return 7 + components.good();		}		override public function evil():Number		{			return -15 + components.evil();		}	}}