package{	public class Rage extends Decorator	{		var components:Component;		public function Rage(components:Component) 		{			this.components=components;		}		override public function getSoul():String		{			return components.getSoul() + "|Rage";		}		override public function good():Number		{			return -9 + components.good();		}		override public function evil():Number		{			return 8 + components.evil();		}	}}