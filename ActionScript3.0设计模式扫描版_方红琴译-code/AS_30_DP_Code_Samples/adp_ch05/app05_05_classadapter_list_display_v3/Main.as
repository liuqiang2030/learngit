package {		import flash.display.MovieClip;	import flash.text.*;	import flash.events.*;	import flash.net.*;	/** 	*	Main Class	*	@ purpose:		Document class for movie	*/	public class Main extends MovieClip {				var xml:XML;		var xmlLoader:URLLoader;		var newBookListField:ListDisplayField;		public function Main() {						// create ListDisplayField (Adapter)			newBookListField = new ListDisplayField();						// develop field formatting 			var format:TextFormat = new TextFormat();			format.size = 14;			format.font = "Arial";						// set field location and format			newBookListField.x = 20;			newBookListField.y = 20;			newBookListField.width = 500;			newBookListField.height = 300;			newBookListField.border = true;			newBookListField.defaultTextFormat = format;						// create list from O'Reilly New Books Feed (Atom)			var newBooksURL = "http://www.oreillynet.com/pub/feed/29";			xml = new XML();			var xmlURL:URLRequest = new URLRequest(newBooksURL);			xmlLoader = new URLLoader(xmlURL);			xmlLoader.addEventListener(Event.COMPLETE, xmlLoaded);					addChild(newBookListField); // add field to display list		}				function xmlLoaded(evtObj:Event) {			xml = XML(xmlLoader.data);			// set the default XML namespace			if (xml.namespace("") != undefined) {				default xml namespace = xml.namespace("");			}			// populate the ListDisplayField with new book titles			for each (var bookTitle:XML in xml..entry.title) {				newBookListField.addItem(bookTitle.toString());			}		}	} }