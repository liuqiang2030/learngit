package {		public class Composite extends Component {			protected var sName:String;		protected var aChildren:Array;				public function Composite(sNodeName:String) {			this.sName = sNodeName;			this.aChildren = new Array();		}				override public function add(c:Component):void {			aChildren.push(c);			c.setParent(this);		}				override public function getChild(n:int):Component { 			if ((n > 0) && (n <= aChildren.length)) {				return aChildren[n-1];			} else {				return null;			}		}				override public function operation():void {			trace(this.sName);			for each (var c:Component in aChildren) {				c.operation();			}		}	}}