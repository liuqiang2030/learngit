package {	import flash.display.Sprite;	import flash.events.*;	import flash.geom.*;	import flash.ui.Keyboard;		/** 	*	Main Class	*	@ purpose:		Document class for movie	*/	public class Main extends Sprite {				private var snake:Composite;		public function Main() {						// create snake			snake = new Head();			snake.x = snake.y = 200;						// add snake to stage			addChild(snake);						// add a body segment			var segment:Composite = new BodySegment();			snake.add(segment);			segment.x = segment.y = -50; // place it off stage			addChild(segment);			snake.update(); // to fit the segments together						// register with the stage to receive key press events			stage.addEventListener(KeyboardEvent.KEY_DOWN, onKeyPress);		}				private function onKeyPress(event:KeyboardEvent):void {			switch (event.keyCode) {				case Keyboard.LEFT : 					snake.rotation -= 10;					break;				case Keyboard.RIGHT : 					snake.rotation += 10;					break;				case Keyboard.UP : 					var newFWLocOffset:Point = Point.polar(5, snake.rotation * Math.PI / 180);					snake.x += newFWLocOffset.x; // move forward by the x offset					snake.y += newFWLocOffset.y; // move forward by the y offset					break;				case Keyboard.DOWN : 					var newBKLocOffset:Point = Point.polar(5, snake.rotation * Math.PI / 180);					snake.x -= newBKLocOffset.x; // move back by the x offset					snake.y -= newBKLocOffset.y; // move back by the y offset					break;			}			snake.update(); // update root composite node		}	}}