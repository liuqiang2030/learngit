package {		import flash.display.MovieClip;	import flash.text.TextFormat;	import flash.text.TextField;	import flash.text.TextFieldAutoSize;	/** 	*	Main Class	*	@ purpose:		Document class for movie	*/	public class Main extends MovieClip {		public function Main() {						// create new receiver			var numDisplayField:TextField = new TextField();			numDisplayField.autoSize = TextFieldAutoSize.LEFT;			numDisplayField.text = '100'; // default value			numDisplayField.border = true;			numDisplayField.x = 50;			numDisplayField.y = 50;			this.addChild(numDisplayField);						// concrete command that rotates sprite CW			var incCommand:ICommand = new IncrementCommand(numDisplayField);			// concrete command that rotates sprite CCW			var decCommand:ICommand = new DecrementCommand(numDisplayField);						// create invoker button panel			var panel:InvokerPanel = new InvokerPanel();			panel.setButton(0,"+1");			panel.setButton(1,"-1");			panel.x = 50;			panel.y = 100;			this.addChild(panel);						// add commands to invoker			panel.setCommand(0, incCommand);			panel.setCommand(1, decCommand);		}	}}