package {		import flash.display.MovieClip;	import flash.text.TextFormat;	import flash.text.TextField;	import flash.text.TextFieldAutoSize;	import flash.ui.Keyboard;	/** 	*	Main Class	*	@ purpose:		Document class for movie	*/	public class Main extends MovieClip {		public function Main() {						// create new receiver			var numDisplayField:TextField = new TextField();			numDisplayField.autoSize = TextFieldAutoSize.LEFT;			numDisplayField.text = '100'; // default value			numDisplayField.border = true;			numDisplayField.x = 50;			numDisplayField.y = 50;			this.addChild(numDisplayField);						// concrete command that increments a number in a field			var incCommand:CommandWithUndo = new IncrementCommandWithUndo(numDisplayField);			// concrete command that decrements a number in a field			var decCommand:CommandWithUndo = new DecrementCommandWithUndo(numDisplayField);			// concrete command that undoes the last command			var undo:CommandWithUndo = new UndoLastCommand();						// create invoker button panel			var panel:InvokerPanel = new InvokerPanel();			panel.setButton(0,"+1");			panel.setButton(1,"-1");			panel.setButton(2,"Undo");			panel.x = 50;			panel.y = 100;			this.addChild(panel);						// add commands to invoker			panel.setCommand(0, incCommand);			panel.setCommand(1, decCommand);			panel.setCommand(2, undo); // undo						// create keyboard shortcut invoker			var kb:InvokerKeyboard = new InvokerKeyboard(this.stage);			// add commands to keyboard shortcut invoker			kb.setCommand(Keyboard.RIGHT, incCommand);			kb.setCommand(Keyboard.LEFT, decCommand);			kb.setCommand(Keyboard.NUMPAD_ADD, incCommand);			kb.setCommand(Keyboard.NUMPAD_SUBTRACT, decCommand);		}	}}