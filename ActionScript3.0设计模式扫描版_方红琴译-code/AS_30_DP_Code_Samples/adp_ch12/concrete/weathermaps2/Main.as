package {		import flash.display.*;	import flash.events.*;	/** 	*	Main Class	*	@ purpose:		Document class for movie	*/	public class Main extends Sprite {		public function Main() {						var model:IModel = new Model();			var controller:ICompInputHandler = new Controller(model);						// composite view			var view:CompositeView = new CBView(model, controller);			view.x =  view.y = 10;			addChild(view);							// add a child leaf view			var map:ComponentView = new MapView(model);			view.add(map); 			map.x = 0			map.y = 40;			addChild(map);							// register to view to recieve notifications from the model			model.addEventListener(Event.CHANGE, view.update);		}	}}